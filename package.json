{
  "name": "please-update",
  "description": "Notify when you release a new version",
  "version": "0.0.1",
  "author": "Chris Andrejewski <christopher.andrejewski@gmail.com>",
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ],
    "plugins": [],
    "env": {
      "nyc": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "bugs": {
    "url": "https://github.com/andrejewski/please-update/issues"
  },
  "dependencies": {
    "chalk": "^2.0.0",
    "has-yarn": "^1.0.0",
    "is-ci": "^1.0.10",
    "node-emoji": "^1.5.1",
    "semver": "^5.3.0"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-plugin-istanbul": "^4.1.1",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-stage-0": "^6.5.0",
    "babel-regenerator-runtime": "^6.5.0",
    "babel-register": "^6.11.6",
    "coveralls": "^3.0.0",
    "del": "^3.0.0",
    "fixpack": "^2.3.1",
    "gulp": "^3.9.1",
    "gulp-babel": "^8.0.0",
    "gulp-sourcemaps": "^2.5.1",
    "nyc": "^11.0.0",
    "pre-commit": "^1.1.3",
    "pre-push": "^0.1.1",
    "source-map-support": "^0.5.0",
    "standard": "^11.0.0"
  },
  "homepage": "https://github.com/andrejewski/please-update#readme",
  "keywords": [
    "node",
    "npm",
    "package",
    "starter"
  ],
  "license": "ISC",
  "main": "lib/index.js",
  "nyc": {
    "include": [
      "src/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false,
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "pre-commit": [
    "prepublish"
  ],
  "pre-push": [
    "prepublish"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrejewski/please-update.git"
  },
  "scripts": {
    "build": "npm run lint && gulp",
    "coveralls": "npm run report && nyc report --reporter=text-lcov | coveralls",
    "lint": "standard --fix && fixpack",
    "prepublish": "npm run build && npm run test",
    "report": "NODE_ENV=nyc nyc npm test",
    "test": "npm run build && ava --serial",
    "test-ci": "npm run build && ava --serial",
    "watch": "gulp watch"
  }
}
